<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/scrollview"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/ll_part_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <!-- app info 模块 -->
           <!--  <include layout="@layout/layout_detail_app_info"/> -->
            
            
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/detail_bottom_bg" >
        
        <Button android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="16sp"
            android:background="@drawable/selector_detail_btn"
            android:text="收藏"/>
        
        <FrameLayout android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_height="match_parent">
            
            <ProgressBar android:layout_width="match_parent"
                android:id="@+id/pb_progress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/progressbar_drawable"
                android:layout_height="match_parent"/>
            
            <Button android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:id="@+id/btn_download"
                android:textColor="#fff"
                android:background="@drawable/selector_btn_download"
                android:text="下载"/>
            
        </FrameLayout>
        
          <Button android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="16sp"
            android:background="@drawable/selector_detail_btn"
            android:text="分享"/>
    </LinearLayout>

</LinearLayout>