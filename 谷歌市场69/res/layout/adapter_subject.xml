<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
<!--     xmlns:googleplay="http://schemas.android.com/apk/res/res-auto" -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:padding="5dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/selector_list_item"
        android:orientation="vertical" >

        <com.huida.googleplayfinal.ui.view.RatioImageView
            android:layout_marginTop="5dp"
            xmlns:googleplay="http://schemas.android.com/apk/res/com.huida.googleplayfinal"
            googleplay:ratio="2.43"
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
<!--         <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" /> -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/tv_des"
            android:layout_marginTop="8dp"
            android:text="阅兵，阅兵，阅兵，阅兵，"
            android:textColor="@color/txt_title"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>